<Window x:Class="Softwareprojekt2015.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding [settings]}" Height="406" Width="702">
    <Grid>
        <ComboBox Name="cb_language" HorizontalAlignment="Left" Height="23" Margin="10,45,0,0" VerticalAlignment="Top" Width="190" IsReadOnly="True" SelectionChanged="cb_language_SelectionChanged"/>
        <Label Content="{Binding [language]}" HorizontalAlignment="Left" Height="28" Margin="11,10,0,0" VerticalAlignment="Top" Width="189"/>
        <GroupBox Header="{Binding [advanced]}" HorizontalAlignment="Left" Height="281" Margin="11,84,0,0" VerticalAlignment="Top" Width="673"/>
        <Button Name="btn_save" Content="{Binding [save]}" HorizontalAlignment="Left" Margin="503,45,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="btn_save_Click"/>
        <Button Name="btn_cancel" Content="{Binding [cancel]}" HorizontalAlignment="Left" Margin="593,45,0,0" VerticalAlignment="Top" Width="75" Height="23"/>
    </Grid>
</Window>
